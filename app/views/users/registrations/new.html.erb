<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="container">
    <div class="col-6 m-auto">
      <h2>Sign up</h2>
      <div class="field">
        <%#= f.label "Nom d'utilisateur" %><br />
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class:"form-control", placeholder: "Nom d'utilisateur" %>
      </div>

      <div class="field">
        <%#= f.label "Adresse Email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "Adresse Email" %>
      </div>

      <div class="field">
        <%#= f.label "Mot de passe" %><br />
        <% if @minimum_password_length %>
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder: "Mot de passe" %>
          <em class="text-danger">(Entrez au minimum <%= @minimum_password_length %> caract√®res )</em>
        <% end %>
      </div>

      <div class="form-group">
        <%#= f.label "Confirmez votre mot de passe" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder: "Confirmez votre mot de passe" %>
      </div><br />

      <div class="actions d-grid gap-2">
        <%= f.submit "S'inscrire", class: "btn btn-block btn-outline-primary mb-4" %>
      </div>
      
        <%= render "users/shared/links" %>
      

<% end %>


