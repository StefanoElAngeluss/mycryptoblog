

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="container">
    <div class="col-6 m-auto">
      <h2 class="">Editer <%#= resource_name.to_s.humanize %> <span class="text-primary bouton_editer"><%= @user.username %></span> <%= link_to "Retour à l'accueil", :back, class: "btn btn-primary" %></h2>

      <div class="form-group mb-2">
        <%= f.label "nom_d'utilisateur" %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
      </div><br>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>En attente de confirmation pour: <%= resource.unconfirmed_email %></div>
      <% end %><br>

      <div class="form-group">
        <%= f.label :password %> <br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <figcaption>
          <div class="text-danger">
            <i class="text-danger">Veuillez laisser un blanc si vous ne voulez pas le changer.</i>
            <% if @minimum_password_length %>
              <em class="text-danger"> et doit avoir au minimum <%= @minimum_password_length %> caractères </em>
            <% end %>
          </div>
        </figcaption>
      </div><br>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div><br>

      <div class="form-group">
        <%= f.label :current_password %><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        <figcaption>
          <div class="text-danger"><i>Vous devez entrer votre mot de passe actuel pour confirmer vos changements</i></div>
        </figcaption>
      </div><br>

      <div class="form-group">
        <%= f.submit "Mettre à jour!", class: "btn btn-block btn-outline-success" %>
      </div>

      <hr>

<h3>Suppréssion du compte</h3>

<p>Pas intéresser?</p>
<p class="d-grid gap-2"><%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger" %>
<%#= link_to "Retour à l'accueil", :back, class: "btn btn-primary" %>
</p>


    </div>
  </div>
<% end %>
<br><br>