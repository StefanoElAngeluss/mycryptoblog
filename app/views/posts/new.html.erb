  <% end %>

  <div class="form-group">
    <div class="col-auto">
      <label class="sr-only" for="inlineFormInputGroup"><%= form.label :title %> :</label>
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="far fa-user" style="margin: 4px 0 4px 0!important;"></i>
          </span>
        </div>
        <%= form.text_field :title, class: "form-control", id: "inlineFormInputGroup", placeholder: "Titre de l'article", required: true %>
      </div>
    </div>

    <!--<div class="field">
      <%= form.label :title %>
