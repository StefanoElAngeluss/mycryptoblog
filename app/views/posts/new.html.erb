    </div>-->

    <div class="col-auto">
      <label class="sr-only" for="inlineFormInputGroup"><%= form.label :content %> :</label>
      <div class="input-group mb-2">
        <%= form.text_area :content, class: "form-control", id: "inlineFormInputGroup", placeholder: "Contenu du produit", required: true %>
      </div>
    </div>

    <!--<div class="field">
      <%= form.label :content %>
      <%= form.text_area :content, class: "form-control" %>
    </div>-->

    <div class="col-auto">
      <label class="sr-only" for="inlineFormInputGroup"><%= form.label :premium %> :</label>
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <span class="input-group-text">
            <i class="far fa-registered" style="margin: 4px 0 4px 0!important;"></i>
          </span>
        </div>
        <%= form.check_box :premium, class: "form-control", id: "inlineFormInputGroup", placeholder: "Contenu du produit" %>
